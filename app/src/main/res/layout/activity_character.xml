<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="10dp"
    tools:context=".CharacterActivity">

    <LinearLayout
        android:id="@+id/layoutCharacter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/windowPrimary"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="80dp"
        android:paddingRight="80dp"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <TextView
        android:id="@+id/txtUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="32dp"
        android:text="MiinishBat" />

        <TextView
        android:id="@+id/txtLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtUsername"
        android:textStyle="bold"
        android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="24dp"
            android:text="Lvl. 12" />

    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/character"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="12dp"
        android:padding="0dp"
        android:background="@color/windowSecondary"
        android:layout_below="@+id/layoutCharacter"
        android:layout_centerHorizontal="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/brazoIzq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.4"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/pieIzq"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.68"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/torso"
            android:layout_width="35dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/brazoDer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/brazoIzq"
            app:layout_constraintHorizontal_bias="0.188"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.45"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/pieDer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.84"
            tools:srcCompat="@tools:sample/avatars" />

        <ImageView
            android:id="@+id/cabeza"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.12"
            tools:srcCompat="@tools:sample/avatars" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/btnCustomCharacter"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_below="@+id/character"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@color/primary"
        android:padding="10dp"
        android:text="Custom"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:textStyle="bold"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

    <LinearLayout
        android:id="@+id/layoutStats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCustomCharacter"
        android:layout_marginTop="24dp">

    <!-- Stats -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@color/primary"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txtExpT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Exp:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtCoinsT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Coins: "
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtHpT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="HP:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtAtkT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Atk:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtDefT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Def:"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/txtSpeedT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Spd:"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/txtExp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="[exp]" />

            <TextView
                android:id="@+id/txtCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginTop="16dp"
                android:text="[coins]" />

            <TextView
                android:id="@+id/txtHp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:text="[hp]" />

            <TextView
                android:id="@+id/txtAtk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:text="[atk]" />

            <TextView
                android:id="@+id/txtDef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:text="[def]" />

            <TextView
                android:id="@+id/txtSpeed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:text="[spd]" />

        </LinearLayout>

    </LinearLayout>

    <!-- Weapon -->

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@color/primary"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Weapon"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/weapon"
            android:layout_width="wrap_content"
            android:layout_height="61dp"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            tools:srcCompat="@tools:sample/avatars"/>

        <TextView
            android:id="@+id/txtWeapon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            android:text="[weapon]"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtWeaponStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Atk +15"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />

        <TextView
            android:id="@+id/txtWeaponStatsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Hp +20"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck,TextSizeCheck" />

        <Button
            android:id="@+id/btnWeapon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"
            android:text="Change weapon"
            android:textColor="@color/white"
            android:textSize="14dp"
            tools:ignore="TextSizeCheck" />

    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layoutStats"
        android:layout_marginTop="24dp"
        android:background="@color/cancel1"
        android:text="Back"
        android:textColor="@color/white"
        android:textSize="14dp"
        tools:ignore="TextSizeCheck" />

</RelativeLayout>