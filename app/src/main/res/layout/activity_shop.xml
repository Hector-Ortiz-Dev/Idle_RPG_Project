<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/background"
tools:context=".ShopActivity">

<!-- Título de la pantalla -->
<TextView
    android:id="@+id/titleTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tienda de Pociones"
    android:textColor="@color/primary"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textStyle="bold"
    android:padding="12dp"/>

    <!-- Nombre de usuario, nivel, experiencia y monedas -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:id="@+id/username_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="[Username]"/>

        <TextView
            android:id="@+id/level_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="Coins: [Coins]" />

    </LinearLayout>

<!-- Cuadro superior -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:padding="20dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:background="@color/primary">

    <!-- Poción 1 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="primary"
        android:padding="12dp">

        <!-- Imagen de la poción 1 -->
        <ImageView
            android:id="@+id/potion1ImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/guild"
            android:scaleType="centerCrop"/>

        <!-- Nombre de la poción 1 -->
        <TextView
            android:id="@+id/potion1NameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Nombre poción 1]"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"/>

        <!-- Botón de compra para la poción 1 -->
        <Button
            android:id="@+id/potion1BuyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accept"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="[$Precio]"
            android:padding="8dp"/>

    </LinearLayout>

    <!-- Poción 2 -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Imagen de la poción 2 -->
        <ImageView
            android:id="@+id/potion2ImageView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/guild"
            android:scaleType="centerCrop"/>

        <!-- Nombre de la poción 2 -->
        <TextView
            android:id="@+id/potion2NameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[Nombre poción 2]"
            android:gravity="center"
            android:textSize="16sp"
            android:padding="8dp"/>

        <!-- Botón de compra para la poción 2 -->
        <Button
            android:id="@+id/potion2BuyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accept"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16dp"
            android:text="[$Precio]"
            android:padding="8dp"/>

    </LinearLayout>

</LinearLayout>

<!-- Cuadro inferior -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="20dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="@color/primary">

        <!-- Poción 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Imagen de la poción 3 -->

            <ImageView
                android:id="@+id/potion3ImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/guild" />

            <!-- Nombre de la poción 3 -->
            <TextView
                android:id="@+id/potion3NameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Nombre poción 3]"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="8dp"/>

            <!-- Botón de compra para la poción 3 -->
            <Button
                android:id="@+id/potion3BuyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accept"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="[$Precio]"
                android:padding="8dp"/>

        </LinearLayout>

        <!-- Poción 4 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Imagen de la poción 4 -->
            <ImageView
                android:id="@+id/potion4ImageView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/guild"
                android:scaleType="centerCrop"/>

            <!-- Nombre de la poción 4 -->
            <TextView
                android:id="@+id/potion4NameTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="[Nombre poción 4]"
                android:gravity="center"
                android:textSize="16sp"
                android:padding="8dp"/>

            <!-- Botón de compra para la poción 4 -->
            <Button
                android:id="@+id/potion4BuyButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/accept"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16dp"
                android:text="[$Precio]"
                android:padding="8dp"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Botón de salir -->
    <Button
        android:id="@+id/btnBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="16dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/cancel1"
        android:padding="12dp"/>

</LinearLayout>
